@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "adminLayout"; @* Specifies the layout file to use *@
}

<link href="~/css/site.css" rel="stylesheet" />

<div class="container-fluid">
    @* Stats Row *@
    <div class="row g-4 mb-4">
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="stat-card">
                <div class="d-flex align-items-center">
                    <div class="stat-icon bg-primary bg-opacity-10 text-primary me-3">
                        <i class="fas fa-shopping-cart"></i>
                    </div>
                    <div>
                        <div class="small text-muted mb-1">Total Orders</div>
                        <h4 class="mb-0">1,458</h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="stat-card">
                <div class="d-flex align-items-center">
                    <div class="stat-icon bg-success bg-opacity-10 text-success me-3">
                        <i class="fas fa-book"></i>
                    </div>
                    <div>
                        <div class="small text-muted mb-1">Books in Stock</div>
                        <h4 class="mb-0">856</h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="stat-card">
                <div class="d-flex align-items-center">
                    <div class="stat-icon bg-warning bg-opacity-10 text-warning me-3">
                        <i class="fas fa-users"></i>
                    </div>
                    <div>
                        <div class="small text-muted mb-1">Active Users</div>
                        <h4 class="mb-0">245</h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="stat-card">
                <div class="d-flex align-items-center">
                    <div class="stat-icon bg-info bg-opacity-10 text-info me-3">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <div>
                        <div class="small text-muted mb-1">Revenue</div>
                        <h4 class="mb-0">₹52,945</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* Recent Orders *@
    <div class="card mb-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="card-title mb-0">Recent Orders</h5>
                <a href="@Url.Action("allorder", "Admin")" class="btn btn-link text-decoration-none">View All</a>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Customer</th>
                            <th>Books</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>#ORD-001</td>
                            <td>
                                <div>John Doe</div>
                                <small class="text-muted">john@example.com</small>
                            </td>
                            <td>
                                <div>The Alchemist</div>
                                <small class="text-muted">2 more items</small>
                            </td>
                            <td>₹999</td>
                            <td><span class="status-badge bg-info bg-opacity-10 text-info">Shipped</span></td>
                            <td>
                                <a href="@Url.Action("adminoperation", "Admin")" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                        @* Add more order rows as needed *@
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @* Low Stock Alert *@
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="card-title mb-0">Low Stock Alert</h5>
                <a href="@Url.Action("AdminStock", "Admin")" class="btn btn-link text-decoration-none">View All</a>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Book</th>
                            <th>Genre</th>
                            <th>Current Stock</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="~/images/1984.jpg" alt="Book" style="width: 40px; height: 60px; object-fit: cover;" class="me-3"> @* Assuming images are in wwwroot/images folder *@
                                    <div>
                                        <div>1984</div>
                                        <small class="text-muted">George Orwell</small>
                                    </div>
                                </div>
                            </td>
                            <td>Fiction</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="stock-level me-2" style="width: 100px;">
                                        <div class="stock-level-bar bg-warning" style="width: 25%"></div>
                                    </div>
                                    <span>12</span>
                                </div>
                            </td>
                            <td><span class="status-badge bg-warning bg-opacity-10 text-warning">Low Stock</span></td>
                            <td>
                                <a href="@Url.Action("AdminUpdateStock", "Admin")" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-plus"></i>
                                </a>
                            </td>
                        </tr>
                        @* Add more stock rows as needed *@
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
