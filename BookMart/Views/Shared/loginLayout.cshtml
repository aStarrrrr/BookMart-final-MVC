<html xmlns="http://www.w3.org/1999/xhtml">
    <head><title></title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            scrollbar-width: none; /* For Firefox */
        }

        html, body {
            height: 100%;
        }

        body {
            font-family: sans-serif;
            position: relative;
            overflow-x: hidden;
        }

        .background1 {
            position: fixed;
            inset: 0;
            z-index: -1;
            background: radial-gradient(125% 125% at 50% 10%, #fff 40%, rgb(0, 0, 0) 100%);
        }

        .signup-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .flip-card {
            width: 400px;
            height: 500px;
            perspective: 1000px;
        }

        .flip-card-inner {
            width: 100%;
            height: 100%;
            transition: transform 0.8s;
            transform-style: preserve-3d;
            position: relative;
        }

        .flip-card.flipped .flip-card-inner {
            transform: rotateY(180deg);
        }

        .flip-card-front,
        .flip-card-back {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
            border-radius: 1rem;
        }

        .flip-card-back {
            transform: rotateY(180deg);
            background: #ffffff;
            padding: 2rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        }

        .signup-card {
            background: #ffffff;
            border-radius: 1rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
            padding: 2rem;
            max-width: 400px;
            width: 100%;
        }

        .form-control:focus {
            box-shadow: 0 0 0 0.25rem rgba(59, 130, 246, 0.25);
            border-color: #3b82f6;
        }

        .btn-primary {
            background-color: #3b82f6;
            border-color: #3b82f6;
        }

            .btn-primary:hover {
                background-color: #2563eb;
                border-color: #2563eb;
            }

        .form-footer a {
            text-decoration: none;
            color: #3b82f6;
        }

            .form-footer a:hover {
                color: #2563eb;
            }
    </style>
</head>
<body>
    @RenderBody()
</body>
</html>