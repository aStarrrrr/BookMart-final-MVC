@{
}

@{
    ViewData["Title"] = "BookMart - Your Online Bookstore";
    Layout = "userHomeLayout"; // Assuming you're using a shared layout
}

<link href="~/css/user.css" rel="stylesheet" />


<!-- Hero Banner -->
<section class="hero-banner py-5">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-3 fw-bold mb-4">Welcome to BookMart</h1>
                <p class="lead mb-4">Discover your next favorite book from our vast collection of titles. From timeless classics to contemporary bestsellers, we have something for every reader.</p>
                <div class="d-flex gap-3">
                    <a href="#featured-books" class="btn btn-primary btn-lg">Explore Books</a>
                    <a href="#" class="btn btn-outline-primary btn-lg">Join Now</a>
                </div>
                <div class="mt-4">
                    <div class="d-flex align-items-center gap-4">
                        <div>
                            <h4 class="mb-0">10k+</h4>
                            <small class="text-muted">Books Available</small>
                        </div>
                        <div>
                            <h4 class="mb-0">5k+</h4>
                            <small class="text-muted">Happy Readers</small>
                        </div>
                        <div>
                            <h4 class="mb-0">500+</h4>
                            <small class="text-muted">Authors</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Books Section -->
<section id="featured-books" class="py-5">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Featured Books</h2>
            <a href="#" class="btn btn-link">View All</a>
        </div>
        <div class="row g-4">
            <!-- Book Card 1 -->
            <div class="col-6 col-md-3">
                <div class="book-card card h-100">
                    <div class="position-relative">
                        <img src="images/1984.jpg" class="card-img-top" alt="1984">
                        <span class="badge bg-danger position-absolute top-0 end-0 m-2">20% OFF</span>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">1984</h5>
                        <p class="card-text text-muted">George Orwell</p>
                        <div class="mt-auto">
                            <div class="d-flex align-items-center mb-2">
                                <span class="text-decoration-line-through text-muted me-2">₹399</span>
                                <span class="h5 mb-0">₹299</span>
                            </div>
                            <div class="d-flex gap-2">
                                <a href="@Url.Action("userviewbookdetails", "User")" class="btn btn-outline-primary btn-sm flex-grow-1">
                                    View Details
                                </a>
                                <button class="btn btn-primary btn-sm">
                                    <i class="fas fa-shopping-cart"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Book Card 2 -->
            <div class="col-6 col-md-3">
                <div class="book-card card h-100">
                    <div class="position-relative">
                        <img src="images/the alchemist.jpg" class="card-img-top" alt="The Alchemist">
                        <span class="badge bg-danger position-absolute top-0 end-0 m-2">15% OFF</span>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">The Alchemist</h5>
                        <p class="card-text text-muted">Paulo Coelho</p>
                        <div class="mt-auto">
                            <div class="d-flex align-items-center mb-2">
                                <span class="text-decoration-line-through text-muted me-2">₹299</span>
                                <span class="h5 mb-0">₹249</span>
                            </div>
                            <div class="d-flex gap-2">
                                <a href="@Url.Action("userviewbookdetails", "User")" class="btn btn-outline-primary btn-sm flex-grow-1">
                                    View Details
                                </a>
                                <button class="btn btn-primary btn-sm">
                                    <i class="fas fa-shopping-cart"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Book Card 3 -->
            <div class="col-6 col-md-3">
                <div class="book-card card h-100">
                    <img src="images/becoming.jpg" class="card-img-top" alt="Becoming">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Becoming</h5>
                        <p class="card-text text-muted">Michelle Obama</p>
                        <div class="mt-auto">
                            <div class="d-flex align-items-center mb-2">
                                <span class="h5 mb-0">₹499</span>
                            </div>
                            <div class="d-flex gap-2">
                                <a href="@Url.Action("userviewbookdetails", "User")" class="btn btn-outline-primary btn-sm flex-grow-1">
                                    View Details
                                </a>
                                <button class="btn btn-primary btn-sm">
                                    <i class="fas fa-shopping-cart"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Book Card 4 -->
            <div class="col-6 col-md-3">
                <div class="book-card card h-100">
                    <img src="images/the diary.jpg" class="card-img-top" alt="The Diary">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">The Diary</h5>
                        <p class="card-text text-muted">Anne Frank</p>
                        <div class="mt-auto">
                            <div class="d-flex align-items-center mb-2">
                                <span class="h5 mb-0">₹399</span>
                            </div>
                            <div class="d-flex gap-2">
                                <a href="@Url.Action("userviewbookdetails", "User")" class="btn btn-outline-primary btn-sm flex-grow-1">
                                    View Details
                                </a>
                                <button class="btn btn-primary btn-sm">
                                    <i class="fas fa-shopping-cart"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

