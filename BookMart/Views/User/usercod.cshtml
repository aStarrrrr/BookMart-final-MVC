@{
}

@{
    ViewData["Title"] = "Cash on delivery";
    Layout = "userCodLayout";
}

<link href="~/css/user.css" rel="stylesheet" />

<div class="container mt-5 pt-5">
    <!-- Checkout Steps -->
    <div class="checkout-steps mb-5">
        <div class="step completed">1</div>
        <div class="step completed">2</div>
        <div class="step completed">3</div>
        <div class="step active">4</div>
    </div>

    <div class="row">
        <!-- COD Confirmation -->
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h4 class="mb-0">
                        <i class="fas fa-money-bill-wave me-2"></i>Cash on Delivery Confirmation
                    </h4>
                </div>
                <div class="card-body">
                    <div class="verification-badge mb-4">
                        <i class="fas fa-shield-alt"></i>
                        <span>Your order is secure and confirmed</span>
                    </div>

                    <!-- Delivery Instructions -->
                    <div class="instruction-card">
                        <i class="fas fa-info-circle instruction-icon"></i>
                        <h5>Important Instructions</h5>
                        <ul class="mb-0">
                            <li>Keep ₹575.40 ready for payment during delivery</li>
                            <li>Verify the package before making the payment</li>
                            <li>Payment should be made to the delivery person only</li>
                            <li>Ask for payment receipt after successful payment</li>
                        </ul>
                    </div>

                    <!-- Delivery Timeline -->
                    <div class="delivery-info mt-4">
                        <div class="delivery-step">
                            <h6>Order Confirmed</h6>
                            <p class="text-muted mb-0">Your order has been confirmed</p>
                            <small class="text-muted">May 21, 2025 12:30 PM</small>
                        </div>
                        <div class="delivery-step">
                            <h6>Processing</h6>
                            <p class="text-muted mb-0">We're preparing your order</p>
                            <small class="text-muted">Expected: May 21, 2025</small>
                        </div>
                        <div class="delivery-step">
                            <h6>Shipping</h6>
                            <p class="text-muted mb-0">Your order will be shipped</p>
                            <small class="text-muted">Expected: May 22, 2025</small>
                        </div>
                        <div class="delivery-step">
                            <h6>Delivery</h6>
                            <p class="text-muted mb-0">Estimated delivery date</p>
                            <small class="text-muted">Expected: May 24, 2025</small>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                        <a href="@Url.Action("userorder", "User")" class="btn btn-primary" ">
                            Track order
                        </a>
                        <a href="@Url.Action("userhome", "User")" class="btn btn-outline-primary">
                            Continue shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="col-lg-4 mt-4 mt-lg-0">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">Order Summary</h4>
                        <span class="badge bg-primary">Order #BOK987654</span>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Delivery Address -->
                    <div class="mb-4">
                        <h5 class="mb-3">Delivery Address</h5>
                        <p class="mb-1">John Doe</p>
                        <p class="mb-1">123 Main Street</p>
                        <p class="mb-1">Apartment 4B</p>
                        <p class="mb-0">New York, NY 10001</p>
                    </div>

                    <hr>

                    <!-- Order Items -->
                    <div class="order-items mb-4">
                        <div class="d-flex align-items-center mb-3">
                            <img src="images/1984.jpg" alt="1984" class="rounded" style="width: 50px; height: 70px; object-fit: cover;">
                            <div class="ms-3">
                                <h6 class="mb-0">1984</h6>
                                <small class="text-muted">Qty: 1</small>
                            </div>
                            <span class="ms-auto">₹299</span>
                        </div>
                        <div class="d-flex align-items-center">
                            <img src="images/the alchemist.jpg" alt="The Alchemist" class="rounded" style="width: 50px; height: 70px; object-fit: cover;">
                            <div class="ms-3">
                                <h6 class="mb-0">The Alchemist</h6>
                                <small class="text-muted">Qty: 1</small>
                            </div>
                            <span class="ms-auto">₹249</span>
                        </div>
                    </div>

                    <!-- Cost Breakdown -->
                    <div class="d-flex justify-content-between mb-2">
                        <span>Subtotal</span>
                        <span>₹548</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Shipping</span>
                        <span class="text-success">Free</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Tax</span>
                        <span>₹27.40</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>COD Fee</span>
                        <span class="text-danger">₹49</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <strong>Total</strong>
                        <strong class="h4">₹624.40</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>