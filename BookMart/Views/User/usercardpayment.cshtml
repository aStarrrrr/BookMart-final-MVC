@{
}
@{
    ViewData["Title"] = "Card payment";
    Layout = "userCardPaymentLayout";
}

<link href="~/css/user.css" rel="stylesheet" />

<div class="container mt-5 pt-5">
    <!-- Checkout Steps -->
    <div class="checkout-steps mb-5">
        <div class="step completed">1</div>
        <div class="step completed">2</div>
        <div class="step completed">3</div>
        <div class="step active">4</div>
    </div>

    <div class="row">
        <!-- Card Payment Form -->
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-credit-card me-2"></i>Card Payment
                        </h4>
                        <span class="secure-badge">
                            <i class="fas fa-lock"></i>Secure Payment
                        </span>
                    </div>
                </div>
                <div class="card-body">
                    <form id="cardPaymentForm" class="card-payment-form" onsubmit="handlePayment(event)">
                        <!-- Card Number -->
                        <div class="mb-4">
                            <label class="form-label">Card Number</label>
                            <div class="position-relative">
                                <input type="text" class="form-control card-input"
                                       id="cardNumber"
                                       maxlength="19"
                                       placeholder="1234 5678 9012 3456"
                                       required>
                                <i class="fas fa-credit-card card-icon"></i>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <!-- Expiry Date -->
                            <div class="col-md-6 mb-3 mb-md-0">
                                <label class="form-label">Expiry Date</label>
                                <div class="position-relative">
                                    <input type="text" class="form-control card-input"
                                           id="expiryDate"
                                           maxlength="5"
                                           placeholder="MM/YY"
                                           required>
                                    <i class="fas fa-calendar card-icon"></i>
                                </div>
                            </div>

                            <!-- CVV -->
                            <div class="col-md-6">
                                <label class="form-label">CVV</label>
                                <div class="position-relative">
                                    <input type="password" class="form-control card-input"
                                           id="cvv"
                                           maxlength="4"
                                           placeholder="***"
                                           required>
                                    <i class="fas fa-lock card-icon"></i>
                                </div>
                            </div>
                        </div>

                        <!-- Card Holder Name -->
                        <div class="mb-4">
                            <label class="form-label">Card Holder Name</label>
                            <div class="position-relative">
                                <input type="text" class="form-control card-input"
                                       id="cardHolderName"
                                       placeholder="Name as on card"
                                       required>
                                <i class="fas fa-user card-icon"></i>
                            </div>
                        </div>

                        <!-- Save Card Checkbox -->
                        <div class="mb-4">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="saveCard">
                                <label class="form-check-label" for="saveCard">
                                    Save card for future payments
                                </label>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            Pay ₹575.40<i class="fas fa-lock ms-2"></i>
                        </button>
                    </form>
                </div>
            </div>

            <!-- Navigation Buttons -->
            <div class="d-flex justify-content-start mt-4">
                <a href="@Url.Action("userpaymentselection", "User")" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-2"></i>Change Payment Method
                </a>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="col-lg-4 mt-4 mt-lg-0">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h4 class="mb-0">Order Summary</h4>
                </div>
                <div class="card-body">
                    <!-- Order Items -->
                    <div class="order-items">
                        <div class="d-flex align-items-center mb-3">
                            <img src="images/1984.jpg" alt="1984" class="rounded" style="width: 50px; height: 70px; object-fit: cover;">
                            <div class="ms-3">
                                <h6 class="mb-0">1984</h6>
                                <small class="text-muted">Qty: 1</small>
                            </div>
                            <span class="ms-auto">₹299</span>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <img src="images/the alchemist.jpg" alt="The Alchemist" class="rounded" style="width: 50px; height: 70px; object-fit: cover;">
                            <div class="ms-3">
                                <h6 class="mb-0">The Alchemist</h6>
                                <small class="text-muted">Qty: 1</small>
                            </div>
                            <span class="ms-auto">₹249</span>
                        </div>
                    </div>

                    <hr>

                    <!-- Cost Breakdown -->
                    <div class="d-flex justify-content-between mb-2">
                        <span>Subtotal</span>
                        <span>₹548</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Shipping</span>
                        <span class="text-success">Free</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Tax</span>
                        <span>₹27.40</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <strong>Total</strong>
                        <strong class="h4">₹575.40</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>