@{
}
@{
    ViewData["Title"] = "Payment succesfull";
    Layout = "userPaymentSuccesfullLayout";
}

<link href="~/css/user.css" rel="stylesheet" />

<div class="container mt-5 pt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Success Message -->
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center py-5">
                    <div class="success-animation">
                        <svg class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52">
                            <circle class="checkmark__circle" cx="26" cy="26" r="25" fill="none" />
                            <path class="checkmark__check" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8" />
                        </svg>
                        <h2 class="mb-3">Payment Successful!</h2>
                        <p class="text-muted mb-4">Thank you for your purchase. Your order has been confirmed.</p>
                        <div class="d-flex justify-content-center gap-3">
                            <a href="@Url.Action("userorder", "User")" class="btn btn-primary" ">
                                Track order
                            </a>
                            <a href="@Url.Action("userhome", "User")" class="btn btn-outline-primary">
                                Continue shopping
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order Details -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">Order Details</h4>
                        <span class="badge bg-primary">Order #BOK987654</span>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Order Items -->
                    <div class="order-items mb-4">
                        <div class="d-flex align-items-center mb-3">
                            <img src="images/1984.jpg" alt="1984" class="rounded" style="width: 50px; height: 70px; object-fit: cover;">
                            <div class="ms-3">
                                <h6 class="mb-0">1984</h6>
                                <small class="text-muted">Qty: 1</small>
                            </div>
                            <span class="ms-auto">₹299</span>
                        </div>
                        <div class="d-flex align-items-center">
                            <img src="images/the alchemist.jpg" alt="The Alchemist" class="rounded" style="width: 50px; height: 70px; object-fit: cover;">
                            <div class="ms-3">
                                <h6 class="mb-0">The Alchemist</h6>
                                <small class="text-muted">Qty: 1</small>
                            </div>
                            <span class="ms-auto">₹249</span>
                        </div>
                    </div>

                    <!-- Cost Summary -->
                    <div class="border-top pt-3">
                        <div class="row">
                            <div class="col-md-6">
                                <h5 class="mb-3">Delivery Address</h5>
                                <p class="mb-1">John Doe</p>
                                <p class="mb-1">123 Main Street</p>
                                <p class="mb-1">Apartment 4B</p>
                                <p class="mb-0">New York, NY 10001</p>
                            </div>
                            <div class="col-md-6">
                                <h5 class="mb-3">Payment Summary</h5>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Subtotal</span>
                                    <span>₹548</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Shipping</span>
                                    <span class="text-success">Free</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Tax</span>
                                    <span>₹27.40</span>
                                </div>
                                <hr>
                                <div class="d-flex justify-content-between">
                                    <strong>Total</strong>
                                    <strong>₹575.40</strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tracking Information -->
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h4 class="mb-0">Tracking Information</h4>
                </div>
                <div class="card-body">
                    <div class="tracking-info">
                        <div class="tracking-step">
                            <h6>Order Confirmed</h6>
                            <p class="text-muted mb-0">Your order has been confirmed</p>
                            <small class="text-muted">May 21, 2025 12:30 PM</small>
                        </div>
                        <div class="tracking-step">
                            <h6>Processing</h6>
                            <p class="text-muted mb-0">We're preparing your order</p>
                            <small class="text-muted">Expected: May 21, 2025</small>
                        </div>
                        <div class="tracking-step">
                            <h6>Shipping</h6>
                            <p class="text-muted mb-0">Your order will be shipped</p>
                            <small class="text-muted">Expected: May 22, 2025</small>
                        </div>
                        <div class="tracking-step">
                            <h6>Delivery</h6>
                            <p class="text-muted mb-0">Estimated delivery date</p>
                            <small class="text-muted">Expected: May 24, 2025</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>