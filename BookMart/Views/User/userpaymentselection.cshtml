@{
}
@{
    ViewData["Title"] = "Payment";
    Layout = "userPaymentSelectionLayout";
}

<link href="~/css/user.css" rel="stylesheet" />

<div class="container mt-5 pt-5">
    <!-- Checkout Steps -->
    <div class="checkout-steps mb-5">
        <div class="step completed">1</div>
        <div class="step completed">2</div>
        <div class="step active">3</div>
        <div class="step">4</div>
    </div>

    <div class="row">
        <!-- Payment Options -->
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h4 class="mb-0">
                        <i class="fas fa-credit-card me-2"></i>Select Payment Method
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <!-- Credit/Debit Card -->
                        <div class="col-md-6">
                            <div class="payment-option" onclick="selectPayment('card')">
                                <div class="text-center">
                                    <i class="fas fa-credit-card payment-icon"></i>
                                    <h5>Credit/Debit Card</h5>
                                    <p class="text-muted mb-0">Pay securely with your card</p>
                                    <div class="mt-3">
                                        <img src="https://via.placeholder.com/40" alt="Visa" class="me-2">
                                        <img src="https://via.placeholder.com/40" alt="Mastercard" class="me-2">
                                        <img src="https://via.placeholder.com/40" alt="American Express">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- UPI -->
                        <div class="col-md-6">
                            <div class="payment-option" onclick="selectPayment('upi')">
                                <div class="text-center">
                                    <i class="fas fa-mobile-alt payment-icon"></i>
                                    <h5>UPI</h5>
                                    <p class="text-muted mb-0">Pay using UPI</p>
                                    <div class="mt-3">
                                        <img src="https://via.placeholder.com/40" alt="GPay" class="me-2">
                                        <img src="https://via.placeholder.com/40" alt="PhonePe" class="me-2">
                                        <img src="https://via.placeholder.com/40" alt="Paytm">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Cash on Delivery -->
                        <div class="col-md-6">
                            <div class="payment-option" onclick="selectPayment('cod')">
                                <div class="text-center">
                                    <i class="fas fa-money-bill-wave payment-icon"></i>
                                    <h5>Cash on Delivery</h5>
                                    <p class="text-muted mb-0">Pay when you receive</p>
                                    <small class="text-danger mt-2 d-block">Additional ₹49 fee applies</small>
                                </div>
                            </div>
                        </div>

                        <!-- Net Banking -->
                        <div class="col-md-6">
                            <div class="payment-option" onclick="selectPayment('netbanking')">
                                <div class="text-center">
                                    <i class="fas fa-university payment-icon"></i>
                                    <h5>Net Banking</h5>
                                    <p class="text-muted mb-0">Pay through your bank</p>
                                    <div class="mt-3">
                                        <img src="https://via.placeholder.com/40" alt="SBI" class="me-2">
                                        <img src="https://via.placeholder.com/40" alt="HDFC" class="me-2">
                                        <img src="https://via.placeholder.com/40" alt="ICICI">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Navigation Buttons -->
            <div class="d-flex justify-content-between mt-4">
                <a href="@Url.Action("usercheckout", "User")" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Shipping
                </a>
                <button class="btn btn-primary" onclick="proceedToPayment()" disabled id="proceedBtn">
                    Proceed to Pay<i class="fas fa-arrow-right ms-2"></i>
                </button>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="col-lg-4 mt-4 mt-lg-0">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h4 class="mb-0">Order Summary</h4>
                </div>
                <div class="card-body">
                    <!-- Order Items -->
                    <div class="order-items">
                        <div class="d-flex align-items-center mb-3">
                            <img src="images/1984.jpg" alt="1984" class="rounded" style="width: 50px; height: 70px; object-fit: cover;">
                            <div class="ms-3">
                                <h6 class="mb-0">1984</h6>
                                <small class="text-muted">Qty: 1</small>
                            </div>
                            <span class="ms-auto">₹299</span>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <img src="images/the alchemist.jpg" alt="The Alchemist" class="rounded" style="width: 50px; height: 70px; object-fit: cover;">
                            <div class="ms-3">
                                <h6 class="mb-0">The Alchemist</h6>
                                <small class="text-muted">Qty: 1</small>
                            </div>
                            <span class="ms-auto">₹249</span>
                        </div>
                    </div>

                    <hr>

                    <!-- Cost Breakdown -->
                    <div class="d-flex justify-content-between mb-2">
                        <span>Subtotal</span>
                        <span>₹548</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Shipping</span>
                        <span class="text-success">Free</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Tax</span>
                        <span>₹27.40</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2 cod-fee d-none">
                        <span>COD Fee</span>
                        <span class="text-danger">₹49</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <strong>Total</strong>
                        <strong class="h4">₹575.40</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>