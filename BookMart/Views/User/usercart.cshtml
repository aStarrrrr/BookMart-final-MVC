@{
}

@{
    ViewData["Title"] = "Cart";
    Layout = "userCommonLayout";
}

<link href="~/css/user.css" rel="stylesheet" />

<div class="container mt-5 pt-5">
    <div class="row">
        <!-- Cart Items -->
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h4 class="mb-0">
                        <i class="fas fa-shopping-cart me-2"></i>Shopping Cart (2 items)
                    </h4>
                </div>
                <div class="card-body">
                    <!-- Cart Item 1 -->
                    <div class="cart-item row align-items-center mb-4 pb-3 border-bottom">
                        <div class="col-md-2">
                            <img src="images/1984.jpg" class="img-fluid rounded" alt="1984">
                        </div>
                        <div class="col-md-4">
                            <h5 class="mb-1">1984</h5>
                            <p class="mb-0 text-muted">George Orwell</p>
                            <small class="text-muted">Fiction</small>
                        </div>
                        <div class="col-md-2">
                            <div class="input-group input-group-sm">
                                <button class="btn btn-outline-secondary" type="button">-</button>
                                <input type="number" class="form-control text-center" value="1">
                                <button class="btn btn-outline-secondary" type="button">+</button>
                            </div>
                        </div>
                        <div class="col-md-2 text-end">
                            <span class="h5">₹299</span>
                        </div>
                        <div class="col-md-2 text-end">
                            <button class="btn btn-link text-danger">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Cart Item 2 -->
                    <div class="cart-item row align-items-center">
                        <div class="col-md-2">
                            <img src="images/the alchemist.jpg" class="img-fluid rounded" alt="The Alchemist">
                        </div>
                        <div class="col-md-4">
                            <h5 class="mb-1">The Alchemist</h5>
                            <p class="mb-0 text-muted">Paulo Coelho</p>
                            <small class="text-muted">Fiction</small>
                        </div>
                        <div class="col-md-2">
                            <div class="input-group input-group-sm">
                                <button class="btn btn-outline-secondary" type="button">-</button>
                                <input type="number" class="form-control text-center" value="1">
                                <button class="btn btn-outline-secondary" type="button">+</button>
                            </div>
                        </div>
                        <div class="col-md-2 text-end">
                            <span class="h5">₹249</span>
                        </div>
                        <div class="col-md-2 text-end">
                            <button class="btn btn-link text-danger">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Continue Shopping -->
            <div class="mt-4">
                <a href="@Url.Action("userhome", "User")" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-2"></i>Continue Shopping
                </a>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="col-lg-4 mt-4 mt-lg-0">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h4 class="mb-0">Order Summary</h4>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Subtotal</span>
                        <span>₹548</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Shipping</span>
                        <span class="text-success">Free</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Tax</span>
                        <span>₹27.40</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-4">
                        <strong>Total</strong>
                        <strong class="h4">₹575.40</strong>
                    </div>

                    <!-- Coupon Code -->
                    <div class="mb-4">
                        <label class="form-label">Have a coupon?</label>
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Enter code">
                            <button class="btn btn-outline-secondary" type="button">Apply</button>
                        </div>
                    </div>

                    <!-- Checkout Button -->
                    <a href="@Url.Action("usercheckout","User")" class="btn btn-primary w-100 btn-lg">
                        Proceed to Checkout
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
        <strong class="me-auto">BookMart</strong>
        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body">
        Cart updated successfully!
    </div>
</div>